        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFEE5050"/>
                <GradientStop Color="#FFF6F6F6" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock x:Name="contadorTextBlock"  HorizontalAlignment="Left" Margin="676,364,0,0" TextWrapping="Wrap" Text="0/140" VerticalAlignment="Top" FontSize="20" Opacity="0.5"/>
        <TextBox x:Name="textoTextBox" HorizontalAlignment="Left" Height="324" Margin="39,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="723" TextChanged="textoTextBox_TextChanged" AcceptsReturn="True"/>

    </Grid>
